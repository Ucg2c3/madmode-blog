[user]
	name = Dan Connolly
	email = dckc@madmode.com
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[alias]
	log10 = log -n 10 --pretty=format:'%ad %h %s' --date='format:%Y-%m-%d %H:%M'
        modcommit = "!git add \"$1\" && GIT_AUTHOR_DATE=\"$(date -Iseconds -r \"$1\")\" git commit -m \"WIP: $1\""
[init]
	defaultBranch = main
[branch]
	sort = -committerdate
[column]
	ui = auto
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	renames = true
	mnemonicPrefix = true
[fetch]
	prune = true
	pruneTags = true
	all = true
